@model IEnumerable<Modelos.Prestatario>

<div class="container adjust">
  <div class="row">
    <div class="col-12 text-center">
      <h2 class="titulo">Prestatarios</h2>
    </div>
    <div class="col-10">
      <form method="post" asp-action="Buscar">
        <div class="search-bar d-flex">
          @{
            string query = null;
          }
          <input asp-for=@(query) id="Buscar" class="form-control form-control-lg" type="text" placeholder="Buscar préstamo">
          <input type="submit" style="visibility: hidden; border: 0; padding: 0; font-size: 0;" />
        </div>
      </form>
    </div>
    <div class="col-2">
      <a asp-controller="Prestatario" asp-action="Registrar">
        <button class="btn agregar-btn" type="button">Agregar <span class="plus-icon">+</span></button>
      </a>
    </div>
  </div>
  <div class="row mt-5">
    @{
      foreach (var prestatario in Model)
      {
        <partial name="PartialViews/_CardPrestatario" model="prestatario" />
      }
    }
  </div>
</div>
