@using Modelos
@model IEnumerable<Modelos.Prestamo>

<div class="row mt-5">
  <div class="col-12 text-center">
    <h2 class="titulo">Préstamos</h2>
  </div>
  <div class="col-10">
    <form method="post" asp-action="Buscar">
      <div class="search-bar d-flex">
        @{
          string query = null;
        }
        <input asp-for=@(query) id="Buscar" class="form-control form-control-lg" type="text" placeholder="Buscar préstamo">
        <input type="submit" style="visibility: hidden; border: 0; padding: 0; font-size: 0;" />
      </div>
    </form>
  </div>
  <div class="col-2">
    <a asp-controller="Prestamo" asp-action="Registrar">
      <button class="btn agregar-btn" type="button">Agregar <span class="plus-icon">+</span></button>
    </a>
  </div>
</div>
<div class="row">
  @foreach (Prestamo prestamo in Model)
  {
    <partial name="PartialViews/_CardPrestamo" model="new Prestamo{ Id = prestamo.Id,
                                                                    Tecnico = prestamo.Tecnico,
                                                                    Prestatario = prestamo.Prestatario,
                                                                    Equipos = prestamo.Equipos,
                                                                    FechaPrestamo = prestamo.FechaPrestamo,
                                                                    FechaDevolucion = prestamo.FechaDevolucion,
                                                                    Descripcion = prestamo.Descripcion,
                                                                    EstadoPrestamo = prestamo.EstadoPrestamo }" />
  }
</div>
