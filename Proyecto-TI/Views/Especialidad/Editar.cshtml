@model Modelos.Especialidad
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Upsert">
    <input asp-for="IdEspecialidad" type="hidden" />
    <div class="container align-items-center mt-5 pt-5">
        <div class="col-12 text-center my-4">
            <h2 class="titulo text-center">Editar Especialidad</h2>
        </div>
        <br>
        <br>
        <br>
        <br>
        <br>
        <div class="editar especialidad">
            <div class="container align-items-center my-4 mb-5">
                <div class="row justify-content-center">
                    <!--CAMPO-->
                    <div class="col-12 col-md-8 col-lg-7 mb-3 mb-md-0">
                        <input asp-for="NombreEspecialidad" type="text" class="form-control rounded-pill" placeholder="Item a editar" aria-label="Agregar especialidad">
                        <span asp-validation-for="NombreEspecialidad" class="text-danger"></span>
                    </div>
                    <br>
                    <br>
                    <!-- Botones de Actualizar y Cancelar -->
                    <div class="col-12 col-md-4 col-lg-5 d-flex mx-4 justify-content-center justify-content-md-end">
                        <div class="d-flex flex-column flex-md-row justify-content-center justify-content-md-center w-100">
                            <!-- Botón Actualizar -->
                            <button type="submit" class="btn btn-color-actualizar btn-sm d-flex align-items-center justify-content-center mb-2 mb-md-0 me-md-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                                </svg>
                                Actualizar
                            </button>

                            <!-- Botón Cancelar -->
                            <a asp-controller="Especialidad" asp-action="Index" class="btn btn-color-cancelar btn-sm d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-bar-left" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M12.5 15a.5.5 0 0 1-.5-.5v-13a.5.5 0 0 1 1 0v13a.5.5 0 0 1-.5.5M10 8a.5.5 0 0 1-.5.5H3.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L3.707 7.5H9.5a.5.5 0 0 1 .5.5" />
                                </svg>
                                Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
