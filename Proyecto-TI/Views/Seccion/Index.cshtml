@model Modelos.ViewModels.ViewModelSeccion
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--TITULO-->
<div class="container align-items-center mt-5 pt-5">
    <div class="col-12 text-center my-4">
        <h2 class="titulo text-center">Secciones</h2>
    </div>
    <br>
    <br>
    <br>


    <div class="seccion">
        <form method="post" asp-action="Upsert">
            <div class="container align-items-center my-4 mb-5">
                <div class="row justify-content-center">
                    <div class="col-7 align-items-center">
                        <!--AGREGAR-->
                        <input asp-for="seccion.NombreSeccion" type="text" class="form-control rounded-pill" placeholder="Agregar sección" aria-label="Agregar seccion">
                        <span asp-validation-for="seccion.NombreSeccion" class="text-danger"></span>

                    </div>
                    <br>
                    <br>
                    <div class="col-2 gx-0">
                        <!--BOTÓN-->
                        <button class="btn btn-primary rounded-pill" type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-plus text-light" viewBox="0 0 16 16">
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        </form>
        <form method="post" asp-action="Buscar">
            <!--BUSCAR-->
            <div class="container my-4 gx-0">
                <div class="row">

                    <div class="col-3">
                        <div class="input-group">
                            @{
                                string query = null;
                            }
                            <input asp-for=@(query) type="text" class="form-control rounded-pill" placeholder="Buscar seccion" aria-label="Buscar seccion">
                        </div>
                    </div>

                    <div class="col-2 gx-0">
                        <button type="submit" class="btn btn-primary rounded-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                            </svg>
                        </button>
                    </div>

                </div>
            </div>
        </form>
    @if (Model.listaSecciones.Any())
    {
        <table class="table table-striped text-center">
                    <thead class="table-primary">
                        <tr>
                            <th>Secciones</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.listaSecciones)
                    {
                        <tr>
                            <td>@item.NombreSeccion</td>
                            <td class="d-flex flex-row justify-content-center">
                                <a asp-controller="Seccion" asp-action="Upsert" asp-route-id="@item.IdSeccion" class="btn btn-color-editar btn-sm d-flex align-items-center margen me-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                                    </svg>
                                    Editar
                                </a>
                                <form method="post" asp-controller="Seccion" asp-action="Eliminar" asp-route-id="@item.IdSeccion" style="display:inline;">
                                    <button type="submit" class="btn btn-color-eliminar btn-sm d-flex align-items-center me-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3 margen" viewBox="0 0 16 16">
                                            <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                                        </svg>
                                        Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
              </table>
            }
            </div>
        </div>
